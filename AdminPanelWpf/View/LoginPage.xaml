<Page
    x:Class="LearningApp.View.LoginPage"
    x:Name="This"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LearningApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Page1"
    mc:Ignorable="d"
    VerticalAlignment="Bottom"
    HorizontalAlignment="Center">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom">
        <StackPanel Margin="3 50 3 3" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="450">
            <Label HorizontalAlignment="Center" Content="Bejelentkezés" />
            <Label Content="Felhasználónév" />
            <TextBox Name="TextBoxUserName" Text="{Binding UserName}" />
            <Label Content="Jelszó" />
            <PasswordBox x:Name="PasswordBox" PasswordChar="*"/>
            <Separator Margin="5 5 5 5"/>
            <Button x:Name="Login" Content="Bejelentkezés" Command="{Binding LoginButtonCommand}" CommandParameter="{Binding ElementName=This}"/>
            <Separator Margin="5 5 5 5"/>
            <Button Command="{Binding RegistrationButtonCommand}" Content="Regisztráció" />
        </StackPanel>
    </Grid>
</Page>
