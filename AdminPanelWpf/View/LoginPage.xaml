<Page
    x:Class="LearningApp.View.LoginPage"
    x:Name="This"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LearningApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Page1"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">


    <StackPanel>
        <Label HorizontalAlignment="Center" Content="Bejelentkezés" />
        <Label Content="Felhasználónév" />
        <TextBox Name="TextBoxUserName" Text="{Binding UserName}" />
        <Label Content="Jelszó" />
        <PasswordBox x:Name="PasswordBox" PasswordChar="*" />
        <Button x:Name="Login" Content="Küldés" Command="{Binding LoginButtonCommand}" CommandParameter="{Binding ElementName=This}"/>
        <Button Command="{Binding RegistrationButtonCommand}" Content="Regisztráció" />
    </StackPanel>
</Page>
