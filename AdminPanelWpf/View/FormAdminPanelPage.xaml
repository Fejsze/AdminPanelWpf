<Page
    x:Class="LearningApp.View.FormAdminPanelPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LearningApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Page2"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DockPanel
            Grid.Row="0"
            HorizontalAlignment="Left"
            FlowDirection="LeftToRight">
            <Button Content="Új felhasználó" />
            <Button Command="{Binding ChangePasswordCommand}" Content="Jelszóváltás" />
            <Button Command="{Binding TestCommand}" Content="Test" />
        </DockPanel>
        <ScrollViewer Grid.Row="1">
            <Frame Content="{Binding DisplayPage, Mode=OneWay}" />
        </ScrollViewer>
        <Button
            Grid.Row="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding ExitCommand}"
            Content="Kilépés" />
    </Grid>
</Page>
