<Page
    x:Class="LearningApp.View.ChangePasswordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LearningApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ChangePasswordPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel MaxHeight="170" Background="Gray" Margin="10 0 10 10" Width="450">
        <Label Margin="10 1 10 1" Content="Aktuális jelszó" />
        <TextBox Margin="10 1 10 1" Name="CurrentPW" Text="{Binding OldPassword}" />
        <Label Margin="10 1 10 1" Content="Új jelszó" />
        <TextBox Margin="10 1 10 1" Name="NewPW" Text="{Binding NewPassword}" />
        <Label Margin="10 1 10 1" Content="Új jelszó mégegyszer" />
        <TextBox Margin="10 1 10 1" Name="NewPWAgain" Text="{Binding NewPasswordAgain}" />
        <Button Margin="10 1 10 1" Command="{Binding ButtonCommand}" Content="Mentés" />
    </StackPanel>
</Page>
