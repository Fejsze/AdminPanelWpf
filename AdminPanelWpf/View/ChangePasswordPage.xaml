<Page
    x:Class="AdminPanelWpf.View.ChangePasswordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AdminPanelWpf.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ChangePasswordPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>
        <Label Content="Aktuális jelszó" />
        <TextBox Name="CurrentPW" Text="{Binding OldPassword}" />
        <Label Content="Új jelszó" />
        <TextBox Name="NewPW" Text="{Binding NewPassword}" />
        <Label Content="Új jelszó mégegyszer" />
        <TextBox Name="NewPWAgain" Text="{Binding NewPasswordAgain}" />
        <Button Command="{Binding ButtonCommand}" Content="Mentés" />
    </StackPanel>
</Page>
